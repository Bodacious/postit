<% show_post ||= false %>

<div class='row'>
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post,comment, vote: true), method: 'post' do %>
        <i class='icon-thumbs-up'></i>
      <% end %>
    <br/>
    <% end %>
    <%= pluralize(comment.total_votes, 'vote') %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post,comment, vote: false), method: 'post' do %>
        <i class='icon-thumbs-down'></i>
      <% end %>
    <% end%>
  </div>
	<div class="span8 well">
    "<%= comment.body %>"
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <p>
			<span class='quiet'>by </span><%= link_to comment.creator.username, user_path(comment.creator) %>
			<small>at <%= display_friendly_date(comment.created_at) %></small>
    </p>
  </div>
</div>
