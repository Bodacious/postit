<%= render 'shared/content_title', title: "Log In" %>

<div class='row'>
	<div class="span8 well">
		<%= form_tag '/login' do %>

			<div class="control-group">
				<%= label_tag :username %>
				<%= text_field_tag :username %>
			</div>
			
			<div class="control-group">
				<%= label_tag :password %>
				<%= password_field_tag :password %>
			</div>
			<br/>
			<%= submit_tag 'Login', class: "btn btn-primary" %>
		<% end %>
	</div>
</div>